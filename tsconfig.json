{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false, // This must be false for the React imports to work at both build and run times.
        "alwaysStrict": true,
        "declaration": true,
        "inlineSources": false,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "es5",
        "types":["node"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts"
    ]
}